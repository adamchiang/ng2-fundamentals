{
   "compileOnSave": true,
   "compilerOptions": {
      "declaration": false,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "module": "commonjs",
      "moduleResolution": "node",
      "noImplicitAny": true,
      "removeComments": false,
      "sourceMap": true,
      "suppressImplicitAnyIndexErrors": true,
      "target": "es5",
      "typeRoots": [
         "./node_modules/@types/"
      ]
   },
   "exclude": [
      "node_modules/*",
      "**/*-aot.ts"
   ]
}
