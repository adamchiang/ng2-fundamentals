{
   "compileOnSave": true,
   "compilerOptions": {
      "baseUrl": "src",
      "declaration": false,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "lib": [
         "es2016",
         "dom"
      ],
      "moduleResolution": "node",
      "noImplicitAny": true,
      "outDir": "./dist/out-tsc",
      "removeComments": false,
      "sourceMap": true,
      "suppressImplicitAnyIndexErrors": true,
      "target": "es5",
      "typeRoots": [
         "node_modules/@types"
      ]
   },
   "exclude": [
      "node_modules/*",
      "**/*-aot.ts"
   ]
}
